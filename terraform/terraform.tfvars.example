# ============================================
# Marketfy Terraform Variables
# ============================================
# IMPORTANT: Copy this file to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars to git!

# Basic Configuration
aws_region   = "us-east-1"
environment  = "dev"
project_name = "marketfy"
owner_email  = "your-email@example.com"

# Database Configuration
# IMPORTANT: Use strong passwords in production!
db_username = "marketfy_admin"
db_password = "ChangeThisSecurePassword123!"

# Application Secrets
# IMPORTANT: Generate a strong JWT secret!
jwt_secret = "your-very-long-random-jwt-secret-min-32-characters"

# Optional: Domain Configuration
# domain_name     = "marketfy.yourdomain.com"
# certificate_arn = "arn:aws:acm:us-east-1:123456789:certificate/xxxxx"
# enable_https    = true

# Security: Restrict access to your IP (recommended for dev)
# Get your IP: curl https://checkip.amazonaws.com
# allowed_cidr_blocks = ["YOUR.IP.ADDRESS/32"]

# CloudTrail for auditing (recommended)
enable_cloudtrail = true

# WAF for additional security (optional, additional cost)
enable_waf = false
